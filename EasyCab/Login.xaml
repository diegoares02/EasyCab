<Window x:Class="EasyCab.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" Height="196.744" Width="222.478" WindowStartupLocation="CenterScreen">
    <Grid>
        <Label Content="Username:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="81,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" x:Name="txtUsername"/>
        <Label Content="Password:" HorizontalAlignment="Left" Margin="10,41,0,0" VerticalAlignment="Top"/>
        <PasswordBox HorizontalAlignment="Left" Margin="81,41,0,0" VerticalAlignment="Top" Width="120" Height="23" x:Name="txtPassword"/>
        <StackPanel HorizontalAlignment="Center" Height="80" Margin="121,72,13,0" VerticalAlignment="Top" Width="80">
            <Image Height="60" Width="60" x:Name="imgIngresar" Source="Imagenes/LoginRed.jpg" Stretch="Fill"></Image>
            <Button Content="Ingresar" x:Name="btnIngresar" Click="btnIngresar_Click"></Button>
        </StackPanel>
        <Image HorizontalAlignment="Left" Height="80" Margin="10,72,0,0" VerticalAlignment="Top" Width="80" Source="Imagenes/easy-cab-logo.png" Stretch="Fill"/>
    </Grid>
</Window>
